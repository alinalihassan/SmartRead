<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pspdf__fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/pspdf__fragment_throbber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/pspdf__fragment_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@drawable/pspdf__rounded_rect_password"
        android:textColor="@color/pspdf__color_white"
        android:textColorHint="@color/pspdf__color_gray_light"
        android:textCursorDrawable="@null"
        android:hint="@string/pspdf__fragment_password_hint"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:visibility="gone"
        />

</FrameLayout><!-- From: file:/Users/jernej/Workspace/PSPDFKit/PSPDFKit/android/pspdfkit/src/main/res/layout/pspdf__pdf_fragment.xml -->