<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:foreground="?android:selectableItemBackground"
    tools:ignore="UnusedAttribute">

    <ImageView
        android:id="@+id/pspdf__thumbnail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layoutDirection="ltr"
        tools:ignore="ContentDescription"  /> <!-- We handle content description in adapter -->

    <TextView
        android:id="@+id/pspdf__thumbnail_page_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/pspdf__rounded_rect"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:layoutDirection="ltr"
        />

</FrameLayout><!-- From: file:/Users/jernej/Workspace/PSPDFKit/PSPDFKit/android/pspdfkit/src/main/res/layout/pspdf__grid_thumbnail.xml -->