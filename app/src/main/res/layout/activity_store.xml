<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/storeProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:alpha="1"/>

    <TextView
        android:id="@+id/storeTitle"
        android:alpha="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:padding="8dp"
        android:textColor="#000000"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textSize="28sp"/>
    <TextView
        android:id="@+id/storeAuthor"
        android:alpha="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_below="@id/storeTitle"
        android:textColor="#616161"
        android:textSize="22sp"/>
    <Button
        android:id="@+id/storeButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textSize="18sp"
        android:background="@drawable/purchase_button"
        android:textColor="#ffffff"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/storeAuthor"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:alpha="0"/>
    <TextView
        android:id="@+id/storeDescription"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_below="@id/storeButton"
        android:textColor="#000000"
        android:textSize="22sp"/>
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/storeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>