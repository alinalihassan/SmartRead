<com.heinrichreimersoftware.materialdrawer.DrawerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/mainFrame"
        android:focusable="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:background="@color/color_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ToolbarColoredBackArrow"
            android:minHeight="?android:attr/actionBarSize"
            android:visibility="gone"/>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbarCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="0dp"
            android:visibility="gone">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:background="@color/color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ToolbarColoredBackArrow"
                android:minHeight="?android:attr/actionBarSize"/>
        </android.support.v7.widget.CardView>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

        <RelativeLayout
            android:id="@+id/distributeScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:translationZ="3dp"
            android:elevation="6sp"
            android:background="@android:color/white"
            android:visibility="invisible">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/distributeList"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp">
            </android.support.v7.widget.RecyclerView>
            <Button
                android:id="@+id/distributeButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:textSize="18sp"
                android:text="@string/string_distribute"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/classes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/classListLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?attr/actionBarSize">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/classList"
                        android:padding="8dp"
                        android:scrollbars="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/classFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        sothree:borderWidth="0dp"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@drawable/ic_add_class" />
                </android.support.design.widget.CoordinatorLayout>
                <android.support.design.widget.CoordinatorLayout
                    android:id="@+id/classUsersLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="?attr/actionBarSize">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/usersList"
                        android:layout_width="match_parent"
                        android:scrollbars="vertical"
                        android:layout_height="wrap_content"
                        android:paddingBottom="48dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/access_text"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="4dp"
                            android:elegantTextHeight="true"
                            android:textSize="24sp"/>
                    </RelativeLayout>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/usersFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        sothree:borderWidth="0dp"
                        android:layout_margin="@dimen/fab_margin"
                        android:src="@drawable/ic_account_plus" />
                </android.support.design.widget.CoordinatorLayout>
            </ViewFlipper>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/store"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>

        <com.quinny898.library.persistentsearch.SearchBox
            android:layout_width="wrap_content"
            android:id="@+id/searchbox"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:translationZ="1dp"
            android:layout_marginTop="-6dp"
            android:layout_marginLeft="-6dp"
            android:layout_marginRight="-6dp" />
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/refreshTeacher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize">
                <ListView
                    android:id="@+id/teacherList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v4.widget.SwipeRefreshLayout>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/teacherFab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                sothree:borderWidth="0dp"
                android:layout_margin="@dimen/fab_margin"
                android:src="@drawable/ic_create" />
        </android.support.design.widget.CoordinatorLayout>
        <com.sothree.slidinguppanel.SlidingUpPanelLayout
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:visibility="invisible"
            android:elevation="8dp"
            sothree:umanoPanelHeight="64dp"
            sothree:umanoInitialState="hidden"
            sothree:umanoParalaxOffset="100dp"
            sothree:umanoShadowHeight="4dp">
            <com.joanzapata.pdfview.PDFView
                android:id="@+id/pdfcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <RelativeLayout
                android:id="@+id/slide_panel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:background="#ffffff">
                <ImageView
                    android:id="@+id/check_button"
                    android:clickable="true"
                    android:src="@drawable/ic_check"
                    android:layout_alignParentEnd="true"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="16dp" />
                <EditText
                    android:id="@+id/pdfTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="64dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:singleLine="true"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:textSize="24sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/authorTitle"
                    android:layout_width="128sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_height="wrap_content"
                    android:text="@string/author_title"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:paddingTop="11dp"
                    android:textColor="#000000"
                    android:layout_below="@id/pdfTitle"/>
                <EditText
                    android:id="@+id/authorEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pdfTitle"
                    android:layout_marginStart="128dp"/>
                <TextView
                    android:id="@+id/questionTitle"
                    android:layout_width="128sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_height="wrap_content"
                    android:text="@string/question_title"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:paddingTop="28dp"
                    android:textColor="#000000"
                    android:layout_below="@id/authorTitle"/>
                <EditText
                    android:id="@+id/questionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/authorTitle"
                    android:paddingTop="28dp"
                    android:layout_marginStart="128dp"/>
                <TextView
                    android:id="@+id/pageTitle"
                    android:layout_width="128sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_height="wrap_content"
                    android:text="@string/page_title"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:paddingTop="28dp"
                    android:textColor="#000000"
                    android:layout_below="@id/questionTitle"/>
                <EditText
                    android:id="@+id/pageEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/questionTitle"
                    android:paddingTop="28dp"
                    android:layout_marginStart="128dp"
                    android:inputType="number"/>
                <RadioGroup
                    android:id="@+id/questionGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pageTitle"
                    android:layout_marginTop="32dp">
                    <RadioButton
                        android:id="@+id/question1"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp" />
                    <RadioButton
                        android:id="@+id/question2"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp" />
                    <RadioButton
                        android:id="@+id/question3"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp" />
                    <RadioButton
                        android:id="@+id/question4"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp" />
                </RadioGroup>
                <EditText
                    android:id="@+id/answer1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/pageTitle"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="48dp"/>
                <EditText
                    android:id="@+id/answer2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/pageTitle"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="48dp"/>
                <EditText
                    android:id="@+id/answer3"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/pageTitle"
                    android:layout_marginTop="128dp"
                    android:layout_marginStart="48dp"/>
                <EditText
                    android:id="@+id/answer4"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/pageTitle"
                    android:layout_marginTop="176dp"
                    android:layout_marginStart="48dp"/>
                <Button
                    android:id="@+id/questionNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/NextButtonText"
                    android:textSize="20sp"
                    android:padding="16dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    style="?android:attr/borderlessButtonStyle"/>
            </RelativeLayout>
        </com.sothree.slidinguppanel.SlidingUpPanelLayout>
        <RelativeLayout
            android:id="@+id/aboutScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:translationZ="3dp"
            android:elevation="6sp"
            android:background="@android:color/white"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/aboutImage"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/aboutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="110dp"
                android:textColor="#000000"
                android:text="@string/app_name"/>
            <TextView
                android:id="@+id/aboutVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="135dp"
                android:textColor="#000000"/>
            <Button
                android:id="@+id/aboutFacebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/facebook_about"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="120dp"
                android:textColor="#3B5998"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
            <Button
                android:id="@+id/aboutGoogle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/google_about"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:textColor="#dd4b39"
                android:layout_marginBottom="80dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
            <Button
                android:id="@+id/aboutProducer"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/developer"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:textColor="#000000"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_marginBottom="40dp"/>
            <Button
                android:id="@+id/aboutProgrammer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/programmer"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:textColor="#000000"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/QuestionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:translationZ="3dp"
            android:layout_margin="14dp"
            android:background="@android:color/white"
            android:elevation="8sp"
            android:visibility="invisible">

            <TextView
                android:id="@+id/Question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="14sp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="25sp"
                android:visibility="invisible" />

            <Button
                android:id="@+id/button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/NextButtonText"
                android:textSize="20sp"
                android:visibility="invisible" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/button"
                android:layout_alignEnd="@+id/button"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Question"
                android:layout_marginTop="15dp">

                <RadioButton
                    android:id="@+id/Option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <RadioButton
                    android:id="@+id/Option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <RadioButton
                    android:id="@+id/Option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <RadioButton
                    android:id="@+id/Option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:visibility="invisible" />

            </RadioGroup>
        </RelativeLayout>
        <!--<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                sothree:adSize="SMART_BANNER"
                sothree:adUnitId="@string/banner_ad_unit_id"/>
        </RelativeLayout>-->
        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/snackLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</com.heinrichreimersoftware.materialdrawer.DrawerFrameLayout>